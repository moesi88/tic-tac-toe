<div class="container">
    {{#if showDialog}}
    <div class='message-container'>
        <div class='message-wrapper'>
            <h2>Welcome</h2>
            <p>Choose your symbol!</p>
            <div class="buttons layout-row">
                <button {{action "selectSymbol" "X"}}>X</button>
                <button {{action "selectSymbol" "O"}}>O</button>
            </div>
        </div>
    </div>
    {{/if}}

    <div class="game-board">
        <h1>Tic Tac Toe</h1>
        <div class="board-container">
            <div class="row">
                <div class="box" >1</div>
                <div class="box">2</div>
                <div class="box">3</div>
            </div>
            <div class="row">
                <div class="box">4</div>
                <div class="box">5</div>
                <div class="box">6</div>
            </div>
            <div class="row">
                <div class="box">7</div>
                <div class="box">8</div>
                <div class="box">9</div>
            </div>
        </div>
        <br>
    </div>
</div>